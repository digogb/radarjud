# DJE Monitor - Configurações
# Copie este arquivo para .env e ajuste os valores

# Tribunal principal
DJE_TRIBUNAL=TJCE

# CPFs para monitorar (separados por vírgula, apenas números)
DJE_CPFS_MONITORADOS=00000000000

# Fontes de dados
DJE_USAR_DJEN=true
DJE_USAR_ESAJ=true

# Scraping
DJE_REQUEST_TIMEOUT=60
DJE_DELAY_REQUISICOES=1.5
DJE_DIAS_RETROATIVOS=3
DJE_MAX_RETRIES=3

# Scheduler
DJE_MODO_SCHEDULER=false
DJE_HORA_EXECUCAO=7

# OCR
DJE_OCR_LANG=por
DJE_OCR_DPI=200

# Matcher
DJE_CONTEXTO_CHARS=500

# Telegram (opcional)
DJE_TELEGRAM_BOT_TOKEN=
DJE_TELEGRAM_CHAT_ID=

# Email SMTP (opcional)
DJE_SMTP_HOST=
DJE_SMTP_PORT=587
DJE_SMTP_USER=
DJE_SMTP_PASSWORD=
DJE_EMAIL_DESTINATARIOS=
